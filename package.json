{
  "name": "tarkov-database-website",
  "version": "0.1.0",
  "description": "The website, the main frontend of Tarkov Database",
  "scripts": {
    "lint": "eslint . static/resources/js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-js": "cp node_modules/mapbox-gl/dist/mapbox-gl-csp.js static/resources/js/mapbox/mapbox-gl-csp.js && cp node_modules/mapbox-gl/dist/mapbox-gl-csp-worker.js static/resources/js/mapbox/mapbox-gl-csp-worker.js && cp node_modules/chart.js/dist/Chart.min.js static/resources/js/Chart.min.js",
    "install-css": "cp node_modules/mapbox-gl/dist/mapbox-gl.css static/resources/css/mapbox-gl.css",
    "install-statics": "npm run install-js && npm run install-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tarkov-database/website.git"
  },
  "author": "Markus Wiegand <mail@morphy2k.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tarkov-database/website/issues"
  },
  "homepage": "https://github.com/tarkov-database/website#readme",
  "devDependencies": {
    "mapbox-gl": "^1.6.1",
    "chart.js": "^2.9.3",
    "eslint": "^6.7.2"
  }
}
